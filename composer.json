{
    "name": "zorachka/database",
    "description": "Database Provider",
    "type": "project",
    "require": {
        "php": "^8.1",
        "cycle/database": "^2.4",
        "cycle/migrations": "^4.0",
        "cycle/schema-migrations-generator": "^2.1",
        "doctrine/migrations": "^3.6",
        "doctrine/sql-formatter": "^1.1",
        "zorachka/console": "^1.1",
        "zorachka/container": "^3.1",
        "zorachka/directories": "dev-main",
        "zorachka/event-dispatcher": "^3.0"
    },
    "license": "MIT",
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "authors": [
        {
            "name": "Siarhei Bautrukevich",
            "email": "hello@bautrukevich.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Zorachka\\Database\\": "./src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zorachka\\Database\\Tests\\": "./tests"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.16",
        "phpstan/extension-installer": "^1.2",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpunit/phpunit": "^9.6"
    },
    "scripts": {
        "cs-lint": "php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes --dry-run --diff",
        "cs-fix": "php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes",
        "analyse": "phpstan analyse -c phpstan.neon",
        "test": "vendor/bin/phpunit --colors=always"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
